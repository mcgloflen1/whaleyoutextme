<h2>My Posts</h2>

   <a href="<%= user_path(current_user.id) %>" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Dashboard</a>

<div class="row">

	<% @posts.each do |post| %>

		<div class="col-sm-6">
			<div class="item" style="background-image: url('<%= post.avatar.url %>');">
			
				<h2><%= post.title %></h2>
				<h4><%= post.description %></h4>
				<h5>1 cool text per day, for 30 days, for $1!</h5>
				
				<div class="row">
					<div class="col-sm-1 col-sm-offset-5">
						<a href="/users/<%= post.user_id %>/posts/<%=post.id %>/edit" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
					</div>
					<div class="col-sm-1">
						<%= form_tag(user_post_path(post.user_id, post.id), method: "DELETE", data: {confirm: "Are you sure you want to delete this post?"}) do %>
	                		<button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
	            		<% end %>

	            	</div>
	            </div>

			</div>
		</div>

		<% end %>
	</div>
	
	<div class="text-center">
        <%= will_paginate @posts %>
    </div>